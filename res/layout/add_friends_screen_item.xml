<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/group_list_item_height"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/group_list_item_margin_left_right"
    android:layout_marginRight="@dimen/group_list_item_margin_left_right"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/add_friends_item_icon"
        android:layout_width="@dimen/group_list_item_icon_height_width"
        android:layout_height="@dimen/group_list_item_icon_height_width"
        android:layout_marginLeft="@dimen/addfriends_imageview_marginleft" />

    <TextView
        android:id="@+id/add_friend_name"
        android:layout_width="@dimen/addfriends_textview_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/group_list_item_text_marginLeft"
        android:layout_marginRight="@dimen/addfriends_textbox_marginright"
        android:gravity="center_vertical"
        android:textSize="@dimen/group_list_item_textsize" />

    <CheckBox
        android:id="@+id/add_friend_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/addfriends_checkbox_marginright"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</LinearLayout>