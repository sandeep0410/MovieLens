<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/group_list_item_height"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/group_list_item_margin_left_right"
    android:layout_marginRight="@dimen/group_list_item_margin_left_right"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/voted_movie_image_icon"
        android:layout_width="@dimen/group_list_item_icon_height_width"
        android:layout_height="@dimen/group_list_item_icon_height_width" />

    <TextView
        android:id="@+id/voted_movie_name"
        android:layout_width="218dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/group_list_item_text_marginLeft"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/group_list_item_textsize" />

    <ImageView
        android:id="@+id/voted_up_image"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/voted_up_image_selector" />

    <ImageView
        android:id="@+id/voted_down_image"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/voted_down_image_selector" >
    </ImageView>

</LinearLayout>