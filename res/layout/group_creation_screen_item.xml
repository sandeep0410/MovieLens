<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/group_list_item_height"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/group_list_item_margin_left_right"
    android:layout_marginRight="@dimen/group_list_item_margin_left_right"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/group_list_item_icon_height_width"
        android:layout_height="@dimen/group_list_item_icon_height_width"
        android:layout_marginLeft="@dimen/group_creation_item_marginleftright" />

    <TextView
        android:id="@+id/members_name"
        android:layout_width="235dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/group_list_item_text_marginLeft"
        android:layout_marginRight="@dimen/group_creation_item_marginleftright"
        android:gravity="center_vertical"
        android:textSize="@dimen/group_list_item_textsize" />

    <ImageButton
        android:id="@+id/delete_member"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/delete_button_selector" />

</LinearLayout>