<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/group_list_fragment_margintop"
        android:text="@string/group_list_fragment_your_groups"
        android:textSize="@dimen/group_list_fragment_your_group_textsize" />

    <ListView
        android:id="@+id/group_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/group_list_fragment_listview_marginleft"
        android:layout_marginTop="@dimen/group_list_fragment_listview_margintop" >
    </ListView>

</LinearLayout>