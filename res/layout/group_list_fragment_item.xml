<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/group_list_item_height"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:layout_marginLeft="@dimen/group_list_item_margin_left_right"
    android:layout_marginRight="@dimen/group_list_item_margin_left_right"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/favorite_icon"
        android:layout_width="@dimen/group_list_item_icon_height_width"
        android:layout_height="@dimen/group_list_item_icon_height_width"
        android:background="@drawable/star_favorite" />

    <TextView
        android:id="@+id/group_name"
        android:layout_width="@dimen/group_list_item_text_width"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="@dimen/group_list_item_textsize" 
        android:layout_marginLeft="@dimen/group_list_item_text_marginLeft"/>

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="@dimen/group_list_item_icon_height_width"
        android:layout_height="@dimen/group_list_item_icon_height_width"
        android:background="@drawable/edit_group" />

    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="@dimen/group_list_item_icon_height_width"
        android:layout_height="@dimen/group_list_item_icon_height_width"
        android:background="@drawable/delete_button_selector" />

</LinearLayout>